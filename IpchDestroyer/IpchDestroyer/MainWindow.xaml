<Window x:Class="IpchDestroyer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IpchDestroyer"
        mc:Ignorable="d"
        Title="MainWindow" Width="320" Height="200"
        ResizeMode="NoResize"
        AllowDrop="True" Drop="Window_Drop">
    <Grid>
        <TextBlock x:Name="itemTBLTarget" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="12"><Run Text="対象"/><Run Language="ja-jp" Text="ディレクトリ"/></TextBlock>
        <TextBox x:Name="itemTBXDirectory" Margin="10,27,65,0" TextWrapping="NoWrap" VerticalAlignment="Top" Height="20" FontSize="14" IsReadOnly="True" AllowDrop="True" PreviewDragOver="itemTBXDirectory_PreviewDragOver"/>
        <Button x:Name="BTNRefer" Content="..." Margin="0,27,10,0" VerticalAlignment="Top" Height="20" HorizontalAlignment="Right" Width="50" Click="BTNRefer_Click"/>
        <Button x:Name="itemBTNSubmit" Content="駆逐" Margin="10,66,10,10" FontSize="50" Click="itemBTNSubmit_Click"/>

    </Grid>
</Window>
